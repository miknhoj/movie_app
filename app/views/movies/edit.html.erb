<h1>Edit <%=@movie.title%></h1>
<hr>
<%= form_for @movie do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :genre, class: "form-control", placeholder: "Genre" %>
  </div>
  <div class="form-group">
    <%= f.text_field :year, class: "form-control", placeholder: "Year Released" %>
  </div>
    <div class="form-group">
    <%= f.text_field :synopsis, class: "form-control", placeholder: "Synopsis" %>
  </div>
    </div>
    <div class="form-group">
    <%= f.text_field :picture, class: "form-control", placeholder: "Picture url" %>
  </div>
    <div class="form-group">
    <%= f.label :favorite %>
    <%= f.check_box :favorite, class: "form-control" %>
  </div>
    <%= f.submit "Update Movie", class: "btn btn-block btn-success" %>
  </div>
<% end %>